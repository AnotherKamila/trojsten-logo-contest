html
    padding: 0

body
    background: #fff
    color: #222
    margin: 0
    text-align: center

header
    background: #eee
    padding: 0.8em 0
    border-bottom: 1px solid #ccc

nav
    background: #eee
    border-bottom: 1px solid #ccc
    border-top: 1px solid #fff
    margin-bottom: 2em
    font-weight: bold
    padding: 0.2em 0

header h1
    font-size: 2.4em
    margin: 0
header h1 a
nav a
    text-decoration: none
    color: #15708C
header h1 a
    font-weight: bold
    text-shadow: 0px -1px 0px darken(#15708C, 60%)
nav a
    padding: 0 1em
    color: #666
nav a:hover
nav a.active
    color: #15708C

footer
    padding: 0.4em 0

#content
    margin: 0 auto 5em

table
    margin: 0 auto
table tr td
    width: 20em
    padding: 0.3em
    border: none
table tr td:first-child
    text-align: right
table tr td:last-child
    text-align: left

input[type=text]
input[type=email]
textarea
    border: 1px solid #ccc
    padding: 0.3em 0.4em
textarea
    width: 100%
    height: 5em

:focus
    outline: 1px solid #15708C

#showimage
    font-size: 0.8em
    color: #999
    text-align: center

#preview
    border: 4px solid #ccc
    display: block
    margin: 0 auto

#uploading-overlay
    position: fixed
    top: 0
    left: 0
    height: 100%
    width: 100%
    display: none
    background: rgba(255,255,255,0.8)

#uploading-content
    position: absolute
    top: 45%
    left: 20%
    margin: 0 auto 0 auto
    width: 60%
    padding: 1em
    font-size: 1.2em

.img img
a img
    border: 4px solid #ccc
a:hover img
    border-color: #15708C

ul#submits
    list-style: none
    display: inline-block
    margin: 0
    padding: 0
ul#submits li
    display: inline-block
    margin: 0
    padding: 3em
ul#submits li.votefor img
    padding: 3px
    border: 1px solid lighten(#15708C, 20%)
    margin: -1px
    background: #ccc
    -webkit-box-shadow: 0 0 12px rgba(21, 112, 140, 1);
    -moz-box-shadow:    0 0 12px rgba(21, 112, 140, 1);
    box-shadow:         0 0 12px rgba(21, 112, 140, 1);


ul#submits li .desc
    font-size: 0.8em

#go-upload-stuff
input#submit
input#hlasuj
    display: block
    text-decoration: none
    color: #fff
    text-shadow: 0px -1px 0px darken(#15708C, 60%)
    background: #15708C
    -webkit-border-radius: 2em;
    -moz-border-radius: 2em;
    border-radius: 2em;
    padding: 0.6em
    width: 12em
    margin: 0 auto
    font-size: 1.4em
    border: 1px solid lighten(#15708C, 20%)
    border-bottom-color: darken(#15708C, 20%)
    border-right-color: darken(#15708C, 20%)
    cursor: pointer
#go-upload-stuff:hover
input#submit:hover
input#hlasuj:hover
    -webkit-box-shadow: 0px 0px 5px rgba(50, 50, 50, 1);
    -moz-box-shadow:    0px 0px 5px rgba(50, 50, 50, 1);
    box-shadow:         0px 0px 5px rgba(50, 50, 50, 1);
#go-upload-stuff:active
input#submit:active
input#hlasuj:active
    border: 1px solid darken(#15708C, 20%)
    border-bottom-color: lighten(#15708C, 20%)
    border-right-color: lighten(#15708C, 20%)

input#hlasuj
    font-size: 1em
    width: 3.2em
    height: 3.2em
input#hlasuj[disabled]
    background: #ccc
    cursor: default
input#hlasuj[disabled]:hover
    -webkit-box-shadow: none
    -moz-box-shadow:    none
    box-shadow:         none
    
p.info
    color: #666
    margin: 2em
